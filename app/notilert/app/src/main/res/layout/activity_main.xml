<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnEnableNotificationListener"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable Notification Listener"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/btnRestartService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart Notification Listener"
        android:layout_below="@id/btnEnableNotificationListener"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
